<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Daycares.Activities.Daycare_ShowMoreNew"
    android:background="@drawable/gradient_background">

    <ImageView
        android:id="@+id/addfav2"
        android:layout_width="252dp"
        android:layout_height="95dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/add_afv_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView27"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/addfav"
        />

    <TextView
        android:id="@+id/tv_daycareinfo"
        android:layout_width="386dp"
        android:layout_height="526dp"
        android:background="#cabbe9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="23dp"

        android:layout_marginEnd="352dp"
        android:layout_marginRight="352dp"
        android:layout_marginBottom="102dp"
        android:contentDescription="@string/back_icon"
        app:layout_constraintBottom_toTopOf="@+id/tv_daycareinfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backarrow" />
        //android:onClick="redirecttoresults2"
    <TextView
        android:id="@+id/dname"
        android:layout_width="244dp"
        android:layout_height="27dp"
        android:layout_marginBottom="60dp"
        android:text="@string/tv_daycarename"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/dlocation"
        app:layout_constraintEnd_toEndOf="@+id/tv_daycareinfo"
        app:layout_constraintHorizontal_bias="0.22"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView29"
        android:layout_width="48dp"
        android:layout_height="28dp"
        android:layout_marginBottom="12dp"
        android:contentDescription="@string/location_point"
        app:layout_constraintBottom_toTopOf="@+id/moreInfo"
        app:layout_constraintEnd_toEndOf="@+id/tv_daycareinfo"
        app:layout_constraintHorizontal_bias="0.011"
        app:layout_constraintStart_toStartOf="@+id/tv_daycareinfo"
        app:srcCompat="@drawable/locationicon" />

    <TextView
        android:id="@+id/dlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/tv_address"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/moreInfo"
        app:layout_constraintEnd_toEndOf="@+id/tv_daycareinfo"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toEndOf="@+id/imageView29"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/ddescription"
        android:layout_width="364dp"
        android:layout_height="184dp"
        android:background="#ffcef3"
        android:text="@string/tv_daycareinfo2"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_daycareinfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_daycareinfo"
        app:layout_constraintVertical_bias="0.625"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/contactdetails"
        android:layout_width="232dp"
        android:layout_height="22dp"
        android:text="@string/tv_details"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_daycareinfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ddescription"
        app:layout_constraintVertical_bias="0.159" />

    <TextView
        android:id="@+id/dcontact"
        android:layout_width="216dp"
        android:layout_height="21dp"
        android:layout_marginTop="52dp"
        android:text="@string/tv_contact"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ddescription"
        tools:ignore="TextContrastCheck,TextContrastCheck" />

    <ImageView
        android:id="@+id/call"
        android:layout_width="108dp"
        android:layout_height="43dp"
        android:contentDescription="@string/call"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dcontact"
        app:layout_constraintTop_toBottomOf="@+id/ddescription"
        app:layout_constraintVertical_bias="0.875"
        app:srcCompat="@drawable/call" />

    <TextView
        android:id="@+id/moreInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="8dp"
        android:text="@string/tv_intro3"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ddescription"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/dbooking"
        android:layout_width="162dp"
        android:layout_height="44dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#7654B1"
        android:onClick="gotoform"
        android:text="@string/btn_booking"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_daycareinfo"
        app:layout_constraintEnd_toStartOf="@+id/call"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toStartOf="@+id/dcontact"
        app:layout_constraintTop_toBottomOf="@+id/dcontact"
        app:layout_constraintVertical_bias="0.523"
        tools:ignore="TouchTargetSizeCheck" />
       // android:onClick="gotobookdaycarepg"/>

    <ImageView
        android:id="@+id/dimg"
        android:layout_width="184dp"
        android:layout_height="145dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        app:layout_constraintBottom_toTopOf="@+id/dname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addfav2"
        app:layout_constraintVertical_bias="0.347"
        app:srcCompat="@mipmap/ic_launcher" />

    <RatingBar
        android:id="@+id/drate"
        android:layout_width="292dp"
        android:layout_height="44dp"
        app:layout_constraintBottom_toTopOf="@+id/dlocation"
        app:layout_constraintEnd_toEndOf="@+id/tv_daycareinfo"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="@+id/imageView29"
        app:layout_constraintTop_toBottomOf="@+id/dname"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>