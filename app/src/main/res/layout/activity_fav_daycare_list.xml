<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Daycares.Activities.Fav_DaycareList">

    <ImageView
        android:id="@+id/imageView28"
        android:layout_width="37dp"
        android:layout_height="25dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="102dp"
        android:contentDescription="@string/back_icon"
        android:onClick="gotodaycareresultback"
        app:layout_constraintBottom_toTopOf="@+id/tv_daycareinfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.013"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backarrow"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="34dp"
        android:layout_height="38dp"
        android:layout_marginBottom="102dp"
        android:contentDescription="@string/back_icon"
        android:onClick="gotodaycareresultback"
        app:layout_constraintBottom_toTopOf="@+id/tv_daycareinfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/backarrow"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/imageView35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/fav_list2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/favdaycare"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />


    <TextView
        android:id="@+id/tv_count"
        android:layout_width="258dp"
        android:layout_height="59dp"
        android:layout_marginTop="16dp"
        android:background="#8ff7fd"
        android:fontFamily="@font/amaranth"
        android:gravity="center"


        android:padding="10dp"
        android:text="Count : 10"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.653"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView35"
        app:layout_constraintWidth_percent=".9" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fvlist"
        android:layout_width="412dp"
        android:layout_height="395dp"
        android:layout_marginBottom="164dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_count"
        tools:listitem="@layout/favday_item"
        />

</androidx.constraintlayout.widget.ConstraintLayout>