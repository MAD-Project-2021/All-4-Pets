<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="396dp"
        android:layout_gravity="end"
        android:background="@drawable/bg_window"
        android:orientation="vertical">



        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="38dp"
            android:layout_height="29dp"
            android:layout_gravity="end"
            android:background="@color/browser_actions_bg_grey"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <ImageButton
            android:id="@+id/img_thank1"
            android:layout_width="211dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/thanks_1" />

        <TextView
            android:id="@+id/et_success"
            android:layout_width="386dp"
            android:layout_height="43dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:text="Appointment Successfully Placed !!"
            android:textColor="#574b90"
            android:textSize="22dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/et_thank"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"
            android:text="THANK YOU"
            android:textColor="#574b90"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_gotit"
            android:layout_width="219dp"
            android:layout_height="59dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#226089"
            android:onClick="gotofindvet"
            android:text="GOT IT"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>